{
  "openapi": "3.1.0",
  "info": {
    "title": "Recoup API",
    "description": "API documentation for the Recoup platform - an AI agent platform for the music industry",
    "license": {
      "name": "MIT"
    },
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "https://recoup-api.vercel.app"
    }
  ],
  "security": [
    {
      "apiKeyAuth": []
    }
  ],
  "paths": {
    "/api/artist": {
      "post": {
        "summary": "Create Artist",
        "description": "Creates a new artist account and associates it with an owner account. The new artist will be linked to the specified account via the account_artist_ids table.",
        "operationId": "createArtist",
        "tags": ["Artists"],
        "requestBody": {
          "description": "Artist creation parameters",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateArtistRequest"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Artist created successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/CreateArtistResponse"
                }
              }
            }
          },
          "400": {
            "description": "Bad request - validation error or invalid JSON",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/CreateArtistError"
                }
              }
            }
          },
          "500": {
            "description": "Internal server error - failed to create artist",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "CreateArtistRequest": {
        "type": "object",
        "required": ["name", "account_id"],
        "properties": {
          "name": {
            "type": "string",
            "description": "The name of the artist to create",
            "minLength": 1,
            "example": "New Artist"
          },
          "account_id": {
            "type": "string",
            "format": "uuid",
            "description": "The ID of the owner account that will have access to this artist",
            "example": "123e4567-e89b-12d3-a456-426614174000"
          }
        }
      },
      "CreateArtistResponse": {
        "type": "object",
        "properties": {
          "artist": {
            "$ref": "#/components/schemas/Artist"
          }
        }
      },
      "Artist": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid",
            "description": "Unique identifier for the artist account"
          },
          "account_id": {
            "type": "string",
            "format": "uuid",
            "description": "The account ID (same as id)"
          },
          "name": {
            "type": "string",
            "nullable": true,
            "description": "The artist's name"
          },
          "created_at": {
            "type": "string",
            "format": "date-time",
            "nullable": true,
            "description": "Timestamp when the artist was created"
          },
          "updated_at": {
            "type": "string",
            "format": "date-time",
            "nullable": true,
            "description": "Timestamp when the artist was last updated"
          },
          "image": {
            "type": "string",
            "nullable": true,
            "description": "URL to the artist's profile image"
          },
          "instruction": {
            "type": "string",
            "nullable": true,
            "description": "Custom instructions for the AI agent"
          },
          "knowledges": {
            "description": "Knowledge base data for the artist",
            "nullable": true
          },
          "label": {
            "type": "string",
            "nullable": true,
            "description": "Record label affiliation"
          },
          "organization": {
            "type": "string",
            "nullable": true,
            "description": "Organization affiliation"
          },
          "company_name": {
            "type": "string",
            "nullable": true,
            "description": "Company name"
          },
          "job_title": {
            "type": "string",
            "nullable": true,
            "description": "Job title"
          },
          "role_type": {
            "type": "string",
            "nullable": true,
            "description": "Role type"
          },
          "onboarding_status": {
            "description": "Onboarding status data",
            "nullable": true
          },
          "onboarding_data": {
            "description": "Onboarding progress data",
            "nullable": true
          },
          "account_info": {
            "type": "array",
            "description": "Associated account info records",
            "items": {
              "type": "object"
            }
          },
          "account_socials": {
            "type": "array",
            "description": "Associated social media accounts",
            "items": {
              "type": "object"
            }
          }
        }
      },
      "CreateArtistError": {
        "type": "object",
        "properties": {
          "status": {
            "type": "string",
            "example": "error"
          },
          "missing_fields": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "Fields that failed validation"
          },
          "error": {
            "type": "string",
            "description": "Error message describing the validation failure"
          }
        }
      },
      "Error": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string",
            "description": "Error message"
          }
        }
      }
    },
    "securitySchemes": {
      "apiKeyAuth": {
        "type": "apiKey",
        "in": "header",
        "name": "x-api-key",
        "description": "API key for authentication"
      }
    }
  }
}
